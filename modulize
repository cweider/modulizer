var fs = require('fs');
var pathutil = require('path');
var Modulizer = require('./modulizer').Modulizer;

var breakForError = function (message) {
  process.stderr.write(message + '\n');
  process.exit(1);
}

var args = process.argv.slice(2);
var arg;

var options = {};
options.rootPath = process.cwd();
options.libraryPaths = [];
importPaths = [];
excludePaths = [];
reportPath = undefined;

while (arg = args.shift()) {
  if (arg.slice(0,2) != '--') {
    importPaths.push(args);
    break;
  } else if (arg == '--') {
    importPaths = importPaths.concat(args);
    break;
  }

  switch (arg) {
    case '--library-path':
      arg = args.shift();
      if (!arg || arg == '--') {
        breakForError("Path must be provided for --library-path");
      }
      options.libraryPath = arg;
      break;
    case '--root-path':
      arg = args.shift();
      if (!arg || arg == '--') {
        breakForError("Path must be provided for --root-path");
      }
      options.rootPath = arg;
      break;
    case '--output':
      arg = args.shift();
      if (!arg || arg == '--') {
        breakForError("Path must be provided for --ouput");
      }
      options.outputPath = arg;
      break;
    case '--report':
      arg = args.shift();
      if (!arg || arg == '--') {
        breakForError("Path must be provided for --report");
      }
      reportPath = arg;
      break;
    case '--exclude':
      arg = args.shift();
      if (!arg || arg == '--') {
        breakForError("Path must be provided for --report");
      }
      var paths = fs.readFileSync(arg, 'utf8')
        .replace(/\n\n+/, '\n')
        .replace(/^\n+/)
        .replace(/\n+$/)
        .split('\n');
      excludePaths = excludePaths.concat(paths);
      break;
    case '--import-library':
      options.importLibrary = true;
      break;
    case '--import-root':
      options.importRoot = true;
      break;
    case '--import-dependencies':
      options.importDependencies = true;
      break;
    case '--include-kernel':
      options.kernel = true;
      break;
    default:
      breakForError("Unknown option: " + arg);
  }
}
options.import = importPaths;
options.exclude = excludePaths;

var writeStream = process.stdout;
if (options.outputPath) {
  writeStream =
    fs.createWriteStream(options.outputPath, {flags: 'w', encoding: 'utf8'});
}
writeStream.on('error', function () {
  console.log("Could not write to output.");
  process.exit(1);
});

if (options.kernel) {
  writeStream.write(fs.readFileSync(pathutil.join(__dirname, 'kernel.js')));
}

var writeReport = function (error, paths) {
  if (reportPath) {
    fs.writeFileSync(reportPath, paths.join('\n'));
  }
};

(new Modulizer(options)).compile(writeStream, writeReport);
